%html
  %head
    %title Health Care station
    = stylesheet_link_tag 'application'
    = javascript_include_tag 'application'
    = csrf_meta_tags
  %body
    .topnav
      .image
        - if @current_user
          = link_to image_tag("logo.png", alt: "Example Image", style: "width:200px;height:auto;"), user_path(@current_user)
        - else
          = link_to image_tag("logo.png", alt: "Example Image", style: "width:200px;height:auto;"), login_path
      = render :partial=>'sessions/login_page'
    .noticenav
      -# this goes just inside %body:
      - if flash[:notice]
        #notice.message= flash[:notice]
      - elsif flash[:warning]
        #warning.message= flash[:warning]
    .content
      = yield
